extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categorys
          if item
            option(value=category._id selected=(category._id.toString()===item.category._id.toString() ? 'selected' : false) ) #{item.category}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===item ? '' : item.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Price of item' name='price' required='true' value=(undefined===item ? '' : item.price) )
    div.form-group
      label(for='stock') Stock:
      input#stock.form-control(type='number', placeholder='Stock of item' name='stock' required='true' value=(undefined===item ? '' : item.stock) )
    div.form-group
      label(for='link') Picture Link:
      input#link.form-control(type='url', placeholder='Picture of item' name='link' required='true' value=(undefined===item ? '' : item.link) )
    
      if book
            //- Handle GET form, where book.author is an object, and POST form, where it is a string.
            option(
              value=category._id
              selected=(
                category._id.toString()==item.category._id
                || category._id.toString()==item.category
              ) ? 'selected' : false
            ) #{item.name}
      else
      
    
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
